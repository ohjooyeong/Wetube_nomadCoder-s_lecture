extends layouts/main.pug

block content
	.form-container
        form(action=`${routes.videos}${routes.editVideo}`, method="post")
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", value="Update Video", required=true)
        a.form-container__link.form-container__link--delete(href=`${routes.videos}${routes.deleteVideo}`) Delete Video
